<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

    <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="gone"
            app:indicatorName="LineSpinFadeLoaderIndicator"
            app:indicatorColor="@color/chuck_colorAccent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/HeaderBar"
            android:elevation="4dp"
    />

    <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Lion 2. Cow 3.Grass"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/editText16"
            app:layout_constraintTop_toBottomOf="@+id/editText16" />

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" app:layout_constraintTop_toBottomOf="@+id/my_toolbar"/>

    <EditText
            android:id="@+id/editText16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="What do you want to eat?"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"/>

    <Button
            android:id="@+id/button21"
            android:layout_width="73dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Tweat"
            app:layout_constraintEnd_toEndOf="@+id/editText16"
            app:layout_constraintTop_toBottomOf="@+id/editText16" />
</android.support.constraint.ConstraintLayout>